{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "outDir": "build",
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*",
          "src/types/*"
        ]
      }
    },
    "include": [
      "src/**/*.ts",
      "prisma/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "build",
      "**/*.spec.ts"
    ]
  }
  